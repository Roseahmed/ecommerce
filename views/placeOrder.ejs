<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href='/style/style.css'>
    <title>Review & Place Order</title>
</head>

<body>

    <div class="container">
        <nav class="progressbar progressbar-navigation">
            <ul>
                <li class="active">
                    <a>Sign-In</a>
                </li>
                <li class="active">
                    <a>Shipping Address</a>
                </li>
                <li class="active">
                    <a>Place Order and Pay</a>
                </li>
                <li class="text-muted">
                    <a>Order complete</a>
                </li>
            </ul>
        </nav>

        <div class="row">
            <h2>Review Order</h2>
            <aside class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Shipping address</h5>
                        <p class="card-text">
                            <%=details.shippingDetails.buyerName%><br>Address:
                                <%=details.shippingDetails.apartment%> <br> city/Town:
                                    <%=details.shippingDetails.city%> <br> state:
                                        <%=details.shippingDetails.state%> <br> pincode:
                                            <%=details.shippingDetails.pincode%> <br> phone:
                                                <%=details.shippingDetails.contactNo%><br>
                                                    <%=details.shippingDetails.email%>
                        </p>
                    </div>
                </div>
            </aside>
            <aside class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <div class=" mb-3 btn-block">
                            <button id="rzp-button1" class="btn form-control btn-success">Place Order & Pay</button>
                        </div>
                        <dl class="d-flex justify-content-between">
                            <dt>Items: </dt>
                            <dd> &#x20b9;
                                <%=totalAmount%>
                            </dd>
                        </dl>
                        <dl class="d-flex justify-content-between">
                            <dt>Delivery Charge:</dt>
                            <dd>Free</dd>
                        </dl>
                        <dl class="d-flex justify-content-between text-danger">
                            <dt>Order Total: </dt>
                            <dd>
                                <strong> &#x20b9;<%=totalAmount%></strong>
                            </dd>
                        </dl>
                    </div>
                </div>
            </aside>
        </div>
        <div class="card mt-2">
            <div class="table-responsive">
                <table class="table table-borderless table-shopping-cart">
                    <thead class="text-muted">
                        <tr class="small text-uppercase">
                            <th scope="col">Product</th>
                            <th scope="col" width="120">Quantity</th>
                            <th scope="col" width="120">Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% items.cartItems.forEach((item)=>{ %>
                            <tr>
                                <td>
                                    <!-- product details -->
                                    <figure class="itemside align-items-center">
                                        <div class="aside">
                                            <img src="<%=item.imageURL%>" class="img-sm" alt="product-Image">
                                        </div>
                                        <figcaption class="info">
                                            <a href="#" class="title text-dark">
                                                <%=item.name%>
                                            </a>
                                            <p class="text-muted small">TYPE:
                                                <%=item.type%> <br> Descp:
                                                    <%=item.descp%>
                                            </p>
                                        </figcaption>
                                    </figure>
                                </td>
                                <td>
                                    <!-- product quantity -->
                                    <div class="update-quantity">
                                        <input class="item-quantity form-control" type="number" name="quantity" value="<%=item.quantity%>">
                                        <input type="hidden" name="product-id" value="<%=item._id%>">
                                    </div>
                                </td>
                                <td>
                                    <!-- product price -->
                                    <div class="product-price price-wrap">
                                        <var id="total-price" class="price"> &#x20b9;<%=item.totalPrice%></var>
                                        <small class="text-muted">&#x20b9;<%=item.price%> each</small>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script src='/js/script.js'></script>
</body>

</html>
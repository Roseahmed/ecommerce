<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Shoppingkart</title>
</head>

<body>
    <div class="order-details">
        <h3>
            OrderId:
            <%=order.id%>
        </h3>
        <h3>
            Total amount:
            <%=order.amount%>
        </h3>
    </div>
    <div class='container'>
        <button class="btn btn-secondary btn-block" id="rzp-button1">Pay</button>
    </div>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script src="/js/script.js"></script>
    <script>
        const order = JSON.parse('<%- JSON.stringify(order) %>');
        console.log(order);
        var options = {
            "key": "rzp_test_g6xlzomJJhv6EL",
            "amount": order.amount,
            "currency": "INR",
            "name": "Rose Private Limited",
            "description": "Test Transaction",
            "image": "https://example.com/your_logo",
            "order_id": order.id,
            "callback_url": "/buy/verify",
            "notes": {
                "address": "Razorpay Corporate Office"
            },
            "theme": {
                "color": "#3399cc"
            }
        };
        var rzp1 = new Razorpay(options);
        document.getElementById('rzp-button1').onclick = function(e) {
            rzp1.open();
            e.preventDefault();
        }
    </script>
</body>

</html>
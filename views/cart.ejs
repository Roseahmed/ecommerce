<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href='/style/style.css'>
    <title>Cart</title>
</head>

<body>
    <%- include("partials/navbar") %>
        <div class="container mainContent">
            <h1 style="text-align: center;">Items in your cart</h1>
            <!-- perform the operation if object is not empty -->
            <% if(typeof items=='object' && items.cartItems.length > 0){ %>
                <div class="row">
                    <% items.cartItems.forEach((item)=>{ %>
                        <div class="col-12 mt-3">
                            <div class="card" style="width:90%">
                                <img src="..." class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%=item.name %>
                                    </h5>
                                    <p class="card-text">
                                        <%= item.descp %>
                                    </p>
                                    <h6>
                                        Price:
                                        <%= item.price %>
                                    </h6>
                                    <form class="form add-quantity" enctype="multipart/formdata" action="/cart/<%=item._id%>">
                                        <div class="form-group row">
                                            <label for="input" class="col-sm-1 col-form-label pe-0">Quantity:</label>
                                            <div class="col-sm ms-2 ps-0 me-0 ">
                                                <input type="number" name="quantity" value="<%=item.quantity%>" class="form-control" id="input" style="width:auto;">
                                            </div>
                                            <div class="col-sm ms-0 ps-0">
                                                <button type="submit" class="btn btn-danger">Save</button>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="delete-item">
                                        <a onClick="deleteItem('<%= item._id %>')" class="btn btn-primary">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>
                <hr>
                <div class="amountform" style="width:90%">
                    <form action='/buy' method="POST" class="payment">
                        <div class="mb-3 row">
                            <label for="input" class="col-sm-2 col-form-label">Total Amount (RS):</label>
                            <div class="col-sm-10">
                                <input value="<%=totalAmount[0].total%>" type="text" name="amount" readonly class="form-control" id="input">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-warning mb-3">Checkout</button>
                    </form>
                </div>
                <% } %>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
        <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
        <script src='/js/script.js'></script>
</body>

</html>
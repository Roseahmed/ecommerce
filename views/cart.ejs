<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href='/style/style.css'>
    <title>Shopping Cart</title>
</head>

<body>
    <%- include("partials/navbar") %>
        <div class="container-fluid">
            <% if(typeof items=='object' && items.cartItems.length > 0){ %>
                <div class="row">
                    <aside class="col-lg-9">
                        <div class="card">
                            <div class="table-responsive">
                                <table class="table table-borderless table-shopping-cart">
                                    <thead class="text-muted">
                                        <tr class="small text-uppercase">
                                            <th scope="col">Product</th>
                                            <th scope="col" width="120">Quantity</th>
                                            <th scope="col" width="120">Price</th>
                                            <th scope="col" class="text-right d-none d-md-block" width="200"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% items.cartItems.forEach((item)=>{ %>
                                            <tr>
                                                <td>
                                                    <!-- product details -->
                                                    <figure class="itemside align-items-center">
                                                        <div class="aside">
                                                            <img src="" class="img-sm" alt="product-Image">
                                                        </div>
                                                        <figcaption class="info">
                                                            <a href="#" class="title text-dark">
                                                                <%=item.name%>
                                                            </a>
                                                            <p class="text-muted small">TYPE:
                                                                <%=item.type %> <br> Descp:
                                                                    <%=item.descp%>
                                                            </p>
                                                        </figcaption>
                                                    </figure>
                                                </td>
                                                <td>
                                                    <!-- product quantity -->
                                                    <div class="update-quantity">
                                                        <input class="item-quantity form-control" type="number" name="quantity" value="<%=item.quantity%>">
                                                        <input type="hidden" name="product-id" value="<%=item._id%>">
                                                    </div>
                                                </td>
                                                <td>
                                                    <!-- product price -->
                                                    <div class="product-price price-wrap">
                                                        <var id="total-price" class="price"> &#x20b9;10.00</var>
                                                        <small class="text-muted">&#x20b9;<%=item.price%> each</small>
                                                    </div>
                                                </td>
                                                <!-- Remove product -->
                                                <td class="text-right d-none d-md-block">
                                                    <a onClick="deleteItem('<%=item._id%>')" class="btn btn-light">Remove</a>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </aside>
                    <aside class="col-lg-3">
                        <div class="card">
                            <div class="card-body">
                                <dl class="dlist-align">
                                    <dt>Total price: </dt>
                                    <dd class="text-right ml-3"> &#x20b9;
                                        <%=totalAmount[0].total%>
                                    </dd>
                                </dl>
                                <dl class="dlist-align">
                                    <dt>Shipping rate:</dt>
                                    <dd class="text-right text-danger ml-3"> &#x20b9; 10</dd>
                                </dl>
                                <dl class="dlist-align">
                                    <dt>Total: </dt>
                                    <dd class="text-right text-dark b ml-3">
                                        <strong id="total-amount"> &#x20b9; <%=totalAmount[0].total%></strong>
                                    </dd>
                                </dl>
                                <hr>
                                <div class="checkout">
                                    <form action="/buy" method="post">
                                        <input type="hidden" name="amount" value="<%=totalAmount[0].total %>">
                                        <button type="submit" class="btn btn-out btn-primary btn-main">Checkout</button>
                                    </form>
                                </div>
                                <a href="/" class="btn btn-out btn-success btn-main mt-2">Continue Shopping</a>
                            </div>
                        </div>
                    </aside>
                </div>
                <% } %>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
        <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
        <script src='/js/script.js'></script>
</body>

</html>